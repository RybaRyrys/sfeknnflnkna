<Window x:Class="itog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:itog"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Логин" FontSize="24"/>
        <TextBox x:Name="LogTbx" Grid.Row="1" VerticalAlignment="Bottom" FontSize="24"/>
        <PasswordBox x:Name="PasTbx" Grid.Row="2" VerticalAlignment="Bottom" FontSize="24"/>
        <Button Content="Войти" Grid.Row="3" FontSize="24" Margin="60,15,60,15" Click="Signin_Click"/>
    </Grid>
</Window>
