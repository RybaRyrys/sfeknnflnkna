<Page x:Class="itog.BrandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:itog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrandPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="BrandDgr" SelectionChanged="BrandDgr_SelectionChanged"/>
        <Label Content="Имя бренда" Grid.Row="1"/>
        <TextBox x:Name="BrandTbx" Grid.Row="2"/>
        <Button Content="Добавить данные" Grid.Row="3" Click="Add_Click"/>
        <Button Content="Изменить данные" Grid.Row="4" Click="Change_Click"/>
        <Button Content="Удалить данные" Grid.Row="5" Click="Delete_Click"/>
        <Button Content="Импортировать данные" Grid.Row="6" Click="Import_Click"/>
    </Grid>
</Page>
