<Page x:Class="itog.ItemOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:itog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemOrderPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="IODgr"/>
        <Label Content="Имя товара" Grid.Row="1"/>
        <ComboBox x:Name="ItemCbx" Grid.Row="2"/>
        <Label Content="ID Заказа" Grid.Row="3"/>
        <ComboBox x:Name="OrderCbx" Grid.Row="4"/>
        <Button Content="Добавить данные" Grid.Row="5" Click="Add_Click"/>
        <Button Content="Изменить данные" Grid.Row="6" Click="Change_Click"/>
        <Button Content="Удалить данные" Grid.Row="7" Click="Delete_Click"/>
    </Grid>
</Page>
